<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/closeDialog"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/close"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp"
        />
    <ImageView
        android:id="@+id/imgNotif"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/notification"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"/>

    <emad.youtube.Tools.AmurorFont
        android:id="@+id/canWe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Can We Request Permission"
        android:layout_above="@+id/please"
        android:layout_marginTop="120dp"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"/>



    <emad.youtube.Tools.Redhat
        android:id="@+id/please"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:layout_above="@+id/allowPermission"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="60dp"
        android:layout_centerHorizontal="true"
        android:textSize="13sp"/>

    <emad.youtube.Tools.MontsFont
        android:id="@+id/allowPermission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_permission"
        android:text="Allow"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_above="@+id/otherTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />

    <emad.youtube.Tools.Redhat
        android:id="@+id/otherTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No, other time"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textSize="13sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>