<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.DailyFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/instaTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/instaDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thoughts"
            android:textSize="14sp"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/instaTitle"
            android:layout_centerHorizontal="true"/>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/instagramRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_above="@+id/followInsta"
            android:layout_below="@+id/instaDesc"/>


        <RelativeLayout
            android:id="@+id/followInsta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:text="Follow Us on Instagram"
                android:layout_centerVertical="true"
                android:textColor="#005772"
                android:layout_toRightOf="@+id/instaIco"
                android:layout_marginLeft="10dp"
                />
            <ImageView
                android:id="@+id/instaIco"
                android:layout_marginTop="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/istta"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>