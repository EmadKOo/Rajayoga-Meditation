<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/round_video"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.comix.rounded.RoundedCornerImageView
        android:id="@+id/imgPlaylistItem"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:src="@drawable/shivp"
        android:scaleType="fitXY"
        app:cornerRadius="4dp"
       />

    <TextView
        android:id="@+id/namePlaylistItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgPlaylistItem"
        android:textSize="12sp"
        android:textColor="#000"
        android:text="Playlist Name"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>